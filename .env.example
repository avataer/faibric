# Faibric Environment Variables
# Copy to .env and fill in your values

# Required: AI Generation
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Required for deploying client websites to Render
RENDER_API_KEY=rnd_your-render-api-key
RENDER_OWNER_ID=tea-your-team-id
GITHUB_TOKEN=ghp_your-github-token
GITHUB_APPS_REPO=your-username/faibric-apps

# Database (for local dev)
DATABASE_URL=postgresql://faibric:faibric@localhost:5432/faibric

# Redis (for local dev)
REDIS_URL=redis://localhost:6379/0

# Django
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=1
